{{#with data}}
    <div class="card">
        <div class="card-header">
            {{name}}
        </div>
        <div class="card-body">
            <div class="card_price">
                <span class="card_price_amout">${{price}}</span>
                <span class="card_price_duration">/ mo</span>
            </div>
            <div class="card_dscr">
                {{#each features}}
                    <div class="card_dscr_item">
                        {{this}}
                    </div>
                {{/each}}
            </div>
            <div class="card_block">
                {{> button}}
            </div>
        </div>
    </div>
{{/with}}