<header class='header'>
	{{> logo}}
	<div class='header_nav'>
		{{>nav list=header}}
	</div>	
</header>
{{#with hero}}
	<div class="hero">
		<div class="hero_content">
			<h1 class="hero_title">{{title}}</h1>
			<p class="hero_text">{{text}}</p>
		</div>
		<img src="{{photo}}" alt="Hero image" class="hero_img">
	</div>
{{/with}}

<main class="blog">
	{{#each blog}}
		{{> cardBlog}}
	{{/each}}
</main>
{{> line}}
<div class="form">
	{{#with form}}
		<div class="form_content">
			<h3 class="form_title">{{title}}</h3>
			<p class="form_text">{{info}}</p>
		</div>
		{{> buttonForm}}
	{{/with}}
</div>
<footer class="footer row">
	<div class="col-3">
		{{> logo}}
		<span class="footer_copyright">Copyright 2023</span>
	</div>
	{{#each footer}}
		<div class="col-3">
			<span class="footer_title">
				{{title}}
			</span>
			<span class="footer_links">
				{{>nav list=links isVertical=true}}
			</span>
		</div>
	{{/each}}
</footer>